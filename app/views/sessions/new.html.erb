<h2>Log In</h2>

<%= form_for :login, method: "POST",:url => { :action => :create } do %>
  <div class="form-group">
    <%= label_tag "Email:" %>
    <%= text_field_tag :email , params[:email] %>
  </div>
  <div class="form-group">
    <%= label_tag "Password:" %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Enter", :class => "btn btn-default" %>
<% end %>
